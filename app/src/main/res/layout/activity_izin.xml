<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Izin"
        android:textSize="40dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        android:hint="Serial Number"
        app:boxBackgroundColor="@android:color/transparent"
        android:id="@+id/text_layout_serial_number"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_serial_number">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/text_input_serial_number"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_serial_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_layout_serial_number"
        app:layout_constraintBottom_toBottomOf="@id/text_layout_serial_number"
        app:layout_constraintLeft_toRightOf="@id/text_layout_serial_number"
        android:backgroundTint="@color/button2"
        android:text="Verify"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/student_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_layout_serial_number"
        android:layout_margin="35dp"
        android:hint="Name"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/tanggal_keluar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/student_name"
        android:layout_margin="35dp"
        android:hint="Waktu Keluar"
        android:inputType="datetime"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/tanggal_masuk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tanggal_keluar"
        android:layout_margin="35dp"
        android:hint="Waktu Masuk"
        android:inputType="datetime"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/alasan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tanggal_masuk"
        android:layout_margin="35dp"
        android:hint="Alasan"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alasan"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/button2"
        android:text="Sign In"
        android:textColor="@color/colorPrimaryDark"
        />



</androidx.constraintlayout.widget.ConstraintLayout>